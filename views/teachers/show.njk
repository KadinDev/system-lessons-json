{% extends 'layout.njk' %}

{% block head %}
    <title> {{ teachers.name }} </title>
{% endblock %}

{% block content %}

    <form class="card" method="POST" action="/teachers">
        
        <section 
            class="avatar"
            style="background: url({{ teachers.avatar_url }}) no-repeat center center / cover "
        >
                
        </section>
        <section class="details">

            <h3> Detalhes</h3>

            <div class="item">
                <div>Nome Completo</div>
                <div> {{ teachers.name }} </div>
            </div>

            <div class="item">
                <div> Idade </div>
                <div> {{ teachers.age }} </div>   
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>

                <div> {{ teachers.select }} </div>
                
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    {{ "Presencial" if teachers.aula == "P" else 'À Distância' }}
                    
                </div>    
            </div>

            <div class="item" id="endItem">
                <div>Área de Atuação</div>
                <div>
                    {% for service in teachers.services %}
                        <span> {{ service }} </span>
                    {% endfor %}
                </div>
            </div>

            <div class="item" id="endItem">
                <div>Desde</div>
                <div> <span>{{ teachers.created_at }}</span>  </div>
            </div>

            <a href="/teachers/{{teachers.id}}/edit"><button type="button"> EDITAR </button></a>

        </section>

    </form>
{% endblock %}