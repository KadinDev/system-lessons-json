{% extends 'layout.njk' %}

{% block head %}
    <title> Área dos Alunos </title>
{% endblock %}

{% block content %}
    <div class="card table-container">
            
        <div class="newPerson">  <a href="/students/create">NOVO</a></div>

        <table width='100%'>

            <thead>
                <tr>
                    <th>Alunos</th>
                    <th id="formacion">Formação</th>
                    <th>E-mail</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ student.avatar_url }})"></span>
                            {{ student.name }}
                        </td>
                    
                        <td>
                            <span>{{ student.select }}</span>
                        </td>

                        <td>
                            <span>{{ student.email }}</span>
                        </td>

                        <td> <a href="/students/{{ student.id }}">Ver</a> </td>
                    </tr>
                {% endfor %}
            </tbody>

        </table>

    </div>
{% endblock %}