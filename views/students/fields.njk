<div class="item">
    <div>Avatar URL</div>
    <input 
        type="url" 
        name="avatar_url"
        placeholder="https://" 
        value="{{ students.avatar_url }}"
    >    
</div>

<div class="item">
    <div>Nome Completo</div>
    <input 
        type="text"
        name="name"
        placeholder="Qual seu nome?"
        value="{{students.name}}"
    >    
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <input 
        type="date"
        name="birth"
        value="{{students.birth}}"
    >
</div>

<div id="email" class="item">
    <div>E-mail</div>
    <input 
        type="email"
        name="email"
        value="{{students.email}}"  
    >
</div>

<div  class="item">
    <div>Formação</div>
    <select name="select">
        <option value="1° Ano Completo">1° Ano</option> 
        <option value="2° Ano Completo">2° Ano</option>
        <option value="3° Ano Completo">3° Ano</option>
        
    </select>
</div>


<div id="formacao" class="item">
    <div>Hobby</div>
    <input 
        type="text"
        name="hobby"
        value="{{students.hobby}}"  
    >
</div>



<button type="submit"> Salvar </button>